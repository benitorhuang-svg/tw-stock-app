---
/**
 * BaseHead.astro — SEO, Fonts, View Transitions, Global Styles
 * Injected into every page via MainTerminal layout.
 */
interface Props {
    title: string;
    description?: string;
}

const { title, description = 'TWStock Quantum Terminal — 台股高級金融終端機' } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<title>{title} | TWStock PRO</title>
<meta name="theme-color" content="hsl(240, 10%, 4%)" />
<meta name="color-scheme" content="dark" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;700;800&display=swap"
    rel="stylesheet"
/>
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
