---
/**
 * PageLimitSelect.astro - Atomic select for page limit
 */
interface Props {
    id: string;
    class?: string;
}

const { id, class: className = '' } = Astro.props;
---

<div class:list={['relative group', className]}>
    <select
        id={id}
        class="appearance-none bg-surface border border-border hover:border-accent/40 rounded-xl px-5 py-2.5 pr-10 text-[10px] font-mono font-black text-text-primary focus:outline-none focus:ring-2 focus:ring-accent/20 cursor-pointer shadow-xl uppercase tracking-widest transition-all"
    >
        <option value="50">每頁 50 筆</option>
        <option value="100" selected>每頁 100 筆</option>
        <option value="500">每頁 500 筆</option>
    </select>
    <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none text-text-muted">
        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7"
            ></path>
        </svg>
    </div>
</div>
