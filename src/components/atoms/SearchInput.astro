---
/**
 * SearchInput.astro - Atomic search input for data explorer
 */
interface Props {
    id: string;
    placeholder?: string;
    class?: string;
}

const { id, placeholder = '搜尋...', class: className = '' } = Astro.props;
---

<div class:list={['relative group', className]}>
    <div class="absolute inset-y-0 left-3 flex items-center pointer-events-none">
        <svg
            class="w-3.5 h-3.5 text-text-muted group-focus-within:text-accent transition-colors"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
    </div>
    <input
        type="text"
        id={id}
        placeholder={placeholder}
        class="bg-surface border border-border rounded-xl py-2.5 pl-10 pr-4 text-[11px] font-mono text-text-primary placeholder:text-text-muted/70 focus:outline-none focus:border-accent/40 focus:ring-2 focus:ring-accent/10 transition-all w-64 shadow-xl"
    />
</div>
