---
import type { Strategy } from '../data/strategies';

interface Props {
    strategy: Strategy;
    variant?: 'default' | 'compact';
}

const { strategy, variant = 'default' } = Astro.props;

const categoryLabels: Record<string, string> = {
    fundamental: '基本面',
    technical: '技術面',
    sentiment: '籌碼面',
};

const categoryColors: Record<string, string> = {
    fundamental: '#00d4aa',
    technical: '#0099ff',
    sentiment: '#ff9500',
};
---

<a href={`/strategies/${strategy.id}`} class={`strategy-card variant-${variant}`}>
    <div class="card-top">
        <div class="icon-wrapper">
            {strategy.icon}
        </div>
        <span
            class="category-tag"
            style={`--badge-color: ${categoryColors[strategy.category]}; --badge-color-rgb: ${strategy.category === 'fundamental' ? '0, 212, 170' : strategy.category === 'technical' ? '0, 153, 255' : '255, 149, 0'}`}
        >
            {categoryLabels[strategy.category]}
        </span>
    </div>

    <div class="strategy-info">
        <h3 class="strategy-name">{strategy.name}</h3>
        {variant === 'default' && <p class="strategy-desc">{strategy.description}</p>}
    </div>

    {
        variant === 'default' && (
            <div class="card-footer">
                {strategy.conditions.slice(0, 3).map(cond => (
                    <span class="tag">{cond}</span>
                ))}
                {strategy.conditions.length > 3 && (
                    <span class="tag">+{strategy.conditions.length - 3} more</span>
                )}
            </div>
        )
    }
</a>

<style>
    .strategy-card {
        display: block;
        padding: 16px 20px;
        border-bottom: 1px solid var(--c-border);
        text-decoration: none;
        transition: var(--transition-premium);
        background: transparent;
        position: relative;
        overflow: hidden;
    }

    .strategy-card::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 0;
        background: var(--c-accent-secondary);
        transition: var(--transition-premium);
    }

    .strategy-card:hover {
        background: var(--c-bg-glass-hover);
        padding-left: 24px;
    }

    .strategy-card:hover::before {
        width: 4px;
    }

    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .icon-wrapper {
        font-size: 18px;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.03);
        border-radius: var(--radius-sm);
        border: 1px solid var(--c-border);
    }

    .category-tag {
        font-family: 'Inter', sans-serif;
        font-size: 9px;
        font-weight: 800;
        text-transform: uppercase;
        color: var(--badge-color);
        padding: 4px 8px;
        border-radius: 4px;
        background: rgba(var(--badge-color-rgb), 0.1);
        border: 1px solid rgba(var(--badge-color-rgb), 0.2);
        letter-spacing: 0.05em;
    }

    .strategy-name {
        font-family: 'Outfit', sans-serif;
        font-size: 15px;
        font-weight: 700;
        color: var(--c-text-primary);
        margin: 0 0 4px 0;
    }

    .strategy-desc {
        color: var(--c-text-secondary);
        font-size: 12px;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-footer {
        display: none;
    }
</style>
