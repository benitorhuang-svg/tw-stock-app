<style>
    .sidebar-nav {
        width: 240px;
        height: 100vh;
        background: var(--c-bg-glass);
        backdrop-filter: var(--glass-blur);
        border-right: 1px solid var(--c-border);
        display: flex;
        flex-direction: column;
        padding: 16px;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 100;
        transition: width 0.3s var(--ease-out);
    }

    .sidebar-nav.collapsed {
        width: 70px;
    }

    .sidebar-nav.collapsed .logo-text,
    .sidebar-nav.collapsed .item-label {
        display: none;
    }

    /* Header */
    .nav-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--c-border);
        margin-bottom: 16px;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--c-text-primary);
        font-weight: 800;
        text-decoration: none;
        font-size: 16px;
    }

    .logo-icon {
        font-size: 20px;
    }

    .nav-toggle-btn {
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--c-border);
        border-radius: 6px;
        color: var(--c-text-muted);
        cursor: pointer;
        transition: all 0.3s var(--ease-out);
    }

    .nav-toggle-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: var(--c-accent);
    }

    /* Nav Items */
    .nav-items {
        display: flex;
        flex-direction: column;
        gap: 4px;
        flex: 1;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        border-radius: 8px;
        color: var(--c-text-secondary);
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s var(--ease-out);
    }

    .nav-item:hover {
        background: rgba(var(--c-accent-rgb), 0.1);
        color: var(--c-text-primary);
    }

    .nav-item.active {
        background: rgba(var(--c-accent-rgb), 0.15);
        color: var(--c-accent);
        font-weight: 700;
    }

    .item-icon {
        font-size: 18px;
        min-width: 24px;
        text-align: center;
    }

    .nav-bottom {
        border-top: 1px solid var(--c-border);
        padding-top: 16px;
    }

    .sidebar-nav.collapsed .nav-item {
        justify-content: center;
        padding: 12px 0;
    }
</style>

<script>
    // Sidebar Toggle
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const sidebarNav = document.getElementById('sidebar-nav');

    sidebarToggle?.addEventListener('click', () => {
        sidebarNav?.classList.toggle('collapsed');
        const isCollapsed = sidebarNav?.classList.contains('collapsed');
        localStorage.setItem('tw-sidebar-collapsed', String(isCollapsed));
    });

    // Restore sidebar state
    if (localStorage.getItem('tw-sidebar-collapsed') === 'true') {
        sidebarNav?.classList.add('collapsed');
    }

    // Mark active nav items
    const currentPath = window.location.pathname;
    document.querySelectorAll('.nav-item').forEach(item => {
        const href = item.getAttribute('href') || '';
        if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
            item.classList.add('active');
        }
    });
</script>
