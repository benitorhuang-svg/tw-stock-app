<script>
    // Workspace Collapse Toggle
    document.querySelectorAll('.workspace-header').forEach(header => {
        header.addEventListener('click', () => {
            const workspace = header.closest('.workspace');
            workspace?.classList.toggle('collapsed');

            // Save state
            const workspaceName = workspace?.getAttribute('data-workspace');
            if (workspaceName) {
                const collapsed = workspace?.classList.contains('collapsed');
                localStorage.setItem(`tw-workspace-${workspaceName}-collapsed`, String(collapsed));
            }
        });
    });

    // Restore workspace state from localStorage
    document.querySelectorAll('.workspace').forEach(workspace => {
        const name = workspace.getAttribute('data-workspace');
        const isSaved = localStorage.getItem(`tw-workspace-${name}-collapsed`);
        if (isSaved === 'true') {
            workspace.classList.add('collapsed');
        }
    });

    // Sidebar Toggle
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const sidebarNav = document.getElementById('sidebar-nav');

    sidebarToggle?.addEventListener('click', () => {
        sidebarNav?.classList.toggle('collapsed');
        const isCollapsed = sidebarNav?.classList.contains('collapsed');
        localStorage.setItem('tw-sidebar-collapsed', String(isCollapsed));
    });

    // Restore sidebar state
    if (localStorage.getItem('tw-sidebar-collapsed') === 'true') {
        sidebarNav?.classList.add('collapsed');
    }

    // Global Search
    const searchInput = document.getElementById('global-search');
    searchInput?.addEventListener('input', e => {
        const query = (e.target as HTMLInputElement).value.toLowerCase();
        // TODO: Implement search functionality in Phase 2
        console.log('Search:', query);
    });

    // Mark active items
    const currentPath = window.location.pathname;
    document.querySelectorAll('.workspace-item').forEach(item => {
        const href = item.getAttribute('href') || '';
        if (href === currentPath || currentPath.startsWith(href + '/')) {
            item.classList.add('active');
        }
    });
</script>
