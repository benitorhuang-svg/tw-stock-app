<script>
    // Search Logic
    function initSearch() {
        const oldInput = document.getElementById('header-search-input');
        const oldBtn = document.getElementById('header-search-btn');

        if (!oldInput || !oldBtn) return;

        // Clone to strip listeners
        const newInput = oldInput.cloneNode(true) as HTMLInputElement;
        const newBtn = oldBtn.cloneNode(true) as HTMLElement;

        oldInput.replaceWith(newInput);
        oldBtn.replaceWith(newBtn);

        function performSearch() {
            // Important: Read value from the NEW input element
            const query = newInput.value.trim();
            if (query) {
                window.location.href = `/live?symbol=${query}`;
            }
        }

        newBtn.addEventListener('click', performSearch);
        newInput.addEventListener('keypress', e => {
            if (e.key === 'Enter') performSearch();
        });
    }

    // Initialize on load and after Astro swaps
    document.addEventListener('astro:page-load', initSearch);
    document.addEventListener('DOMContentLoaded', initSearch);

    // Theme Management
    const themeToggle = document.getElementById('header-theme-toggle');
    themeToggle?.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'dark';
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('tw-stock-theme', newTheme);
    });

    // Real-time Clock Logic
    function updateHeaderTime() {
        const timeEl = document.getElementById('header-status-time');
        if (timeEl) {
            const now = new Date();
            const dateStr = now.toLocaleDateString('zh-TW', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
            });
            const timeStr = now.toLocaleTimeString('zh-TW', { hour12: false });
            timeEl.textContent = `${dateStr} ${timeStr}`;
        }
    }
    setInterval(updateHeaderTime, 1000);
    updateHeaderTime();

    // Notification Panel Toggle
    const notifBtn = document.getElementById('header-notifications-btn');
    const notifPanel = document.getElementById('header-notifications-panel');
    notifBtn?.addEventListener('click', e => {
        e.stopPropagation();
        notifPanel?.classList.toggle('visible');
    });

    // Clear All Notifications Logic
    const clearBtn = document.getElementById('header-clear-notifications');
    clearBtn?.addEventListener('click', e => {
        e.stopPropagation();
        const list = document.getElementById('header-notifications-list');
        const badge = document.getElementById('header-notification-badge');

        if (list) {
            list.innerHTML = `
                <div style="padding: 40px 20px; text-align: center; color: #94a3b8;">
                    <div style="font-size: 24px; margin-bottom: 10px;">ğŸ“­</div>
                    <div style="font-size: 13px;">ç›®å‰æ²’æœ‰æ–°é€šçŸ¥</div>
                </div>
            `;
        }

        if (badge) {
            badge.style.display = 'none';
        }
    });

    // Interval Settings Toggle
    const settingsBtn = document.getElementById('update-settings-btn');
    const intervalPanel = document.getElementById('update-interval-panel');
    settingsBtn?.addEventListener('click', e => {
        e.stopPropagation();
        intervalPanel?.classList.toggle('visible');
    });

    // Close panels when clicking outside
    window.addEventListener('click', () => {
        notifPanel?.classList.remove('visible');
        intervalPanel?.classList.remove('visible');
    });

    // Interval Logic
    const intervalOpts = document.querySelectorAll('.opt');
    intervalOpts.forEach(btn => {
        btn.addEventListener('click', e => {
            const seconds = (e.currentTarget as HTMLElement).dataset.seconds;
            if (seconds) {
                console.log('Update interval set to:', seconds, 's');
                localStorage.setItem('tw-update-interval', seconds);
                intervalOpts.forEach(b => b.classList.remove('active'));
                (e.currentTarget as HTMLElement).classList.add('active');
            }
        });
    });
</script>
