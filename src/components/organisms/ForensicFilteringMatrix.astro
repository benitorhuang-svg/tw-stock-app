---
/**
 * ForensicFilteringMatrix.astro - Advanced multi-vector stock filtering matrix
 */
---

<div
    class="glass-card p-6 border-b-2 border-b-accent/20 animate-fade-up"
    style="animation-delay: 150ms"
>
    <div class="flex items-center justify-between mb-8 pb-4 border-b border-white/5">
        <div class="flex items-center gap-4">
            <div
                class="w-10 h-10 rounded-xl bg-accent/20 flex items-center justify-center text-accent"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M20 20H4V4"></path><path d="M4 16h16"></path><path d="M4 12h16"
                    ></path><path d="M4 8h16"></path></svg
                >
            </div>
            <div>
                <h3 class="text-xs font-mono font-bold text-white/80 uppercase tracking-[0.2em]">
                    Forensic Filtering Matrix
                </h3>
                <p class="text-[9px] text-white/30 font-mono mt-0.5" id="visible-count">
                    SCANNING DATABASE...
                </p>
            </div>
        </div>
        <div class="flex items-center gap-3">
            <button
                id="reset-filters"
                class="p-2 rounded-lg bg-white/5 text-white/40 hover:text-white transition-colors"
                title="Reset Filters"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"></path><path
                        d="M3 3v5h5"></path></svg
                >
            </button>
            <button
                id="add-custom-strategy"
                class="px-4 py-2 rounded-xl bg-accent/20 text-accent text-[10px] font-bold border border-accent/30 hover:bg-accent/30 transition-all flex items-center gap-2"
            >
                <span>✨ SAVE CONFIG</span>
            </button>
        </div>
    </div>

    <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-8 gap-x-12"
        id="slider-container"
    >
        <!-- Group 1: Value Metrics -->
        <div class="space-y-6">
            <div class="flex items-center gap-2 mb-2">
                <div class="w-3 h-0.5 bg-accent/40"></div>
                <span class="text-[9px] font-mono font-bold text-white/30 uppercase tracking-widest"
                    >Value Deciles</span
                >
            </div>

            <!-- PE -->
            <div class="space-y-2 group" data-filter-type="pe">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >P/E Ratio ≤</span
                    >
                    <span class="text-xs font-mono font-bold text-accent" id="pe-display"
                        >100.0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-pe-max"
                    min="1"
                    max="100"
                    step="1"
                    value="100"
                    class="w-full custom-range"
                />
            </div>

            <!-- PB -->
            <div class="space-y-2 group" data-filter-type="pb">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >P/B Ratio ≤</span
                    >
                    <span class="text-xs font-mono font-bold text-accent" id="pb-display">10.0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-pb-max"
                    min="0.1"
                    max="10"
                    step="0.1"
                    value="10"
                    class="w-full custom-range"
                />
            </div>

            <!-- Yield -->
            <div class="space-y-2 group" data-filter-type="yield">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >Yield % ≥</span
                    >
                    <span class="text-xs font-mono font-bold text-bullish" id="yield-display"
                        >0.0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-yield-min"
                    min="0"
                    max="15"
                    step="0.5"
                    value="0"
                    class="w-full custom-range"
                />
            </div>
        </div>

        <!-- Group 2: Growth & Momentum -->
        <div class="space-y-6">
            <div class="flex items-center gap-2 mb-2">
                <div class="w-3 h-0.5 bg-accent/40"></div>
                <span class="text-[9px] font-mono font-bold text-white/30 uppercase tracking-widest"
                    >Growth Vector</span
                >
            </div>

            <!-- Revenue YoY -->
            <div class="space-y-2 group" data-filter-type="rev">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >Rev YoY % ≥</span
                    >
                    <span class="text-xs font-mono font-bold text-bullish" id="rev-display"
                        >-20.0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-rev-min"
                    min="-20"
                    max="100"
                    step="1"
                    value="-20"
                    class="w-full custom-range"
                />
            </div>

            <!-- Operating Margin -->
            <div class="space-y-2 group" data-filter-type="margin">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >Op Margin % ≥</span
                    >
                    <span class="text-xs font-mono font-bold text-accent" id="margin-display"
                        >-10.0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-margin-min"
                    min="-10"
                    max="50"
                    step="1"
                    value="-10"
                    class="w-full custom-range"
                />
            </div>

            <!-- EPS Growth -->
            <div class="space-y-2 group" data-filter-type="eps">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >EPS (TWD) ≥</span
                    >
                    <span class="text-xs font-mono font-bold text-accent" id="eps-display"
                        >-5.0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-eps-min"
                    min="-5"
                    max="30"
                    step="0.5"
                    value="-5"
                    class="w-full custom-range"
                />
            </div>
        </div>

        <!-- Group 3: Capital Forensic -->
        <div class="space-y-6">
            <div class="flex items-center gap-2 mb-2">
                <div class="w-3 h-0.5 bg-accent/40"></div>
                <span class="text-[9px] font-mono font-bold text-white/30 uppercase tracking-widest"
                    >Capital Forensic</span
                >
            </div>

            <!-- Foreign Streak -->
            <div class="space-y-2 group" data-filter-type="foreign">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >Foreign Streak (Days) ≥</span
                    >
                    <span class="text-xs font-mono font-bold text-bullish" id="foreign-display"
                        >0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-foreign-streak"
                    min="0"
                    max="10"
                    step="1"
                    value="0"
                    class="w-full custom-range"
                />
            </div>

            <!-- Trust Streak -->
            <div class="space-y-2 group" data-filter-type="trust">
                <div class="flex justify-between items-end">
                    <span
                        class="text-[10px] text-white/40 group-hover:text-white/60 transition-colors"
                        >Trust Streak (Days) ≥</span
                    >
                    <span class="text-xs font-mono font-bold text-accent" id="trust-display">0</span
                    >
                </div>
                <input
                    type="range"
                    id="filter-trust-streak"
                    min="0"
                    max="10"
                    step="1"
                    value="0"
                    class="w-full custom-range"
                />
            </div>

            <!-- Dividend Consistency (Example) -->
            <div class="space-y-3">
                <span class="text-[10px] text-white/40 uppercase tracking-widest block"
                    >Institutional Domain</span
                >
                <div class="flex gap-2">
                    <button
                        class="flex-1 py-1.5 rounded-lg bg-white/5 border border-white/10 text-[9px] font-bold text-white/40 hover:text-white hover:border-white/20 transition-all uppercase tracking-tighter"
                        >Foreign Focus</button
                    >
                    <button
                        class="flex-1 py-1.5 rounded-lg bg-white/5 border border-white/10 text-[9px] font-bold text-white/40 hover:text-white hover:border-white/20 transition-all uppercase tracking-tighter"
                        >Local Trust</button
                    >
                </div>
            </div>
        </div>
    </div>
</div>

<style is:global>
    /* Premium Range Slider Styling */
    .custom-range {
        -webkit-appearance: none;
        height: 4px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        border: none;
        outline: none;
    }
    .custom-range::-webkit-slider-thumb {
        -webkit-appearance: none;
        width: 14px;
        height: 14px;
        background: var(--accent);
        border: 3px solid #0a0c10;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0 0 10px rgba(var(--accent-rgb), 0.4);
        transition: all 0.2s;
    }
    .custom-range::-webkit-slider-thumb:hover {
        transform: scale(1.2);
        box-shadow: 0 0 15px rgba(var(--accent-rgb), 0.6);
    }
</style>
