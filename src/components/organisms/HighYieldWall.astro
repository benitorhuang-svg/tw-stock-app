---
/**
 * HighYieldWall.astro - Yield Intelligence Matrix
 */
---

<section
    class="glass-card overflow-hidden border-t-2 border-t-warning/40 animate-fade-up"
    style="animation-delay: 200ms"
>
    <header
        class="px-8 py-5 border-b border-border/50 bg-warning/[0.02] flex items-center justify-between"
    >
        <div class="flex items-center gap-3">
            <div class="w-2 h-2 rounded-full bg-warning animate-pulse"></div>
            <h3 class="text-xs font-mono font-black text-text-secondary uppercase tracking-[0.2em]">
                Dividend Yield Intelligence
            </h3>
        </div>
        <span class="text-[9px] font-mono text-text-muted/50 uppercase tracking-widest font-black"
            >Forensic_Filtering: ENABLED</span
        >
    </header>

    <div class="overflow-x-auto custom-scrollbar">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr
                    class="bg-surface-hover/20 text-[9px] uppercase text-text-muted/70 font-black tracking-widest"
                >
                    <th class="py-4 px-8 border-b border-border/50">Entity</th>
                    <th class="py-4 px-8 border-b border-border/50 text-right">Quote</th>
                    <th class="py-4 px-8 border-b border-border/50 text-right">Variance</th>
                    <th class="py-4 px-8 border-b border-border/50 text-right">Yield_Pct</th>
                    <th class="py-4 px-8 border-b border-border/50 text-right">P/E_Domain</th>
                    <th class="py-4 px-8 border-b border-border/50 text-right">P/B_Vector</th>
                </tr>
            </thead>
            <tbody id="high-yield-body" class="divide-y divide-white/[0.03]">
                <!-- Injected via Forensic Engine -->
                {
                    [...Array(5)].map(() => (
                        <tr class="opacity-10 animate-pulse">
                            <td class="py-4 px-8">
                                <div class="h-4 w-24 bg-surface-hover rounded" />
                            </td>
                            <td class="py-4 px-8">
                                <div class="h-4 w-12 bg-surface-hover rounded ml-auto" />
                            </td>
                            <td class="py-4 px-8">
                                <div class="h-4 w-12 bg-surface-hover rounded ml-auto" />
                            </td>
                            <td class="py-4 px-8">
                                <div class="h-4 w-12 bg-surface-hover rounded ml-auto" />
                            </td>
                            <td class="py-4 px-8">
                                <div class="h-4 w-12 bg-surface-hover rounded ml-auto" />
                            </td>
                            <td class="py-4 px-8">
                                <div class="h-4 w-12 bg-surface-hover rounded ml-auto" />
                            </td>
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</section>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        height: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }
</style>
