---
/**
 * DataTabs Organism
 *
 * Handles deep analysis tabs: Fundamental, Chips, Technical.
 * Enhanced with "Strategic Recon" logic following Spec 004.
 */

interface Props {
    symbol: string;
    details: any;
    chips: any[];
}

const { symbol, details, chips } = Astro.props;

// Compute Institutional Total & Streak
const lastChip = chips[0] || { foreign_inv: 0, invest_trust: 0, dealer: 0 };
const chipTotal = lastChip.foreign_inv + lastChip.invest_trust + lastChip.dealer;

// Trust Buy Streak (Example Logic)
let trustStreak = 0;
for (const c of chips) {
    if (c.invest_trust > 0) trustStreak++;
    else break;
}

// Compute P/E Zone (Simple heuristic for visualization)
const pe = details.pe || 0;
const peZone = pe < 12 ? 'Cheap' : pe < 18 ? 'Fair' : pe < 25 ? 'Expensive' : 'Overvalued';
const pePercent = Math.min((pe / 30) * 100, 100);

// Strategic Verdict Logic (Spec 004)
const signals = [
    {
        name: 'Risk: Value Zone',
        passed: pe < 20 && details.revenue_yoy > 10,
        desc: 'P/E < 20 & Revenue YoY > 10%',
    },
    {
        name: 'Momentum: Institutional',
        passed: trustStreak >= 2 || lastChip.foreign_inv > 1000,
        desc: 'Trust Buying Streak or Heavy Foreign Inflow',
    },
    {
        name: 'Trend: MA Bullish',
        passed: details.ma5 > details.ma20,
        desc: 'MA5 > MA20 (Golden Cross)',
    },
];
const passCount = signals.filter(s => s.passed).length;
const verdict =
    passCount === 3 ? 'STRONG_BUY_RECON' : passCount === 2 ? 'WATCH_RECON' : 'NEUTRAL_WAIT';
---

<div class="data-tabs-container">
    <!-- Strategic Summary Bar -->
    <div class="recon-verdict-bar glass-panel glow-wrapper">
        <div class="glow-bg accent-glow"></div>
        <div class="verdict-content">
            <div class="status-group">
                <span class="label mono">STRATEGIC_VERDICT //</span>
                <span class={`verdict-val mono ${verdict}`}>{verdict}</span>
            </div>
            <div class="signals-group">
                {
                    signals.map(s => (
                        <div class={`sig-item ${s.passed ? 'passed' : 'failed'}`}>
                            <span class="dot" />
                            <span class="mono">{s.name}</span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>

    <div class="tabs-wrapper glass-panel">
        <div class="tabs-header">
            <button class="tab-btn active" data-tab="fundamental">
                <span class="mono">01</span> FUNDAMENTALS
            </button>
            <button class="tab-btn" data-tab="chips">
                <span class="mono">02</span> CHIPS FLOW
            </button>
            <button class="tab-btn" data-tab="technical">
                <span class="mono">03</span> TECHNICALS
            </button>
        </div>

        <div class="tabs-content">
            <!-- Fundamental Tab -->
            <div class="tab-pane active" id="pane-fundamental">
                <div class="analysis-grid">
                    <div class="stat-box">
                        <label>P/E RIVER ZONE</label>
                        <div class="value mono">{pe.toFixed(2)}</div>
                        <div class="pe-river-bar">
                            <div class="river-track">
                                <span class="marker cheap"></span>
                                <span class="marker fair"></span>
                                <span class="marker exp"></span>
                                <div class="cursor" style={`left: ${pePercent}%`}></div>
                            </div>
                            <div class="river-labels mono">
                                <span>10x</span>
                                <span>15x</span>
                                <span>20x</span>
                                <span>25x</span>
                            </div>
                        </div>
                        <div class={`sub ${peZone}`}>{peZone.toUpperCase()} VALUATION</div>
                    </div>

                    <div class="stat-box">
                        <label>DIVIDEND YIELD</label>
                        <div class="value mono">{details.yield?.toFixed(2) || '--'} %</div>
                        <div class="sub">Annualized return profile</div>
                    </div>

                    <div class="stat-box">
                        <label>REVENUE MOMENTUM</label>
                        <div
                            class={`value mono ${details.revenue_yoy > 0 ? 'text-pos' : 'text-neg'}`}
                        >
                            {details.revenue_yoy?.toFixed(2) || '--'} %
                        </div>
                        <div class="sub">YoY Growth trajectory</div>
                    </div>

                    <div class="stat-box">
                        <label>PROFITABILITY (EPS)</label>
                        <div class="value mono">${details.eps?.toFixed(2) || '--'}</div>
                        <div class="sub">Earnings per share</div>
                    </div>
                </div>

                <div class="visual-section">
                    <h3 class="mono">> MARGIN_TREND_MATRIX</h3>
                    <div class="margin-bars">
                        <div class="m-item">
                            <label>GROSS MARGIN</label>
                            <div class="bar-wrap">
                                <div class="bar" style={`width: ${details.gross_margin}%`}></div>
                                <span class="mono">{details.gross_margin?.toFixed(1)}%</span>
                            </div>
                        </div>
                        <div class="m-item">
                            <label>OPERATING MARGIN</label>
                            <div class="bar-wrap">
                                <div class="bar-bg">
                                    <div class="bar" style={`width: ${details.operating_margin}%`}>
                                    </div>
                                </div>
                                <span class="mono">{details.operating_margin?.toFixed(1)}%</span>
                            </div>
                        </div>
                        <div class="m-item">
                            <label>NET MARGIN (ROE)</label>
                            <div class="bar-wrap">
                                <div class="bar-bg">
                                    <div class="bar accent" style={`width: ${details.net_margin}%`}>
                                    </div>
                                </div>
                                <span class="mono">{details.net_margin?.toFixed(1)}%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chips Tab -->
            <div class="tab-pane" id="pane-chips">
                <div class="chips-summary">
                    <div class="c-card">
                        <label>FOREIGN (外資)</label>
                        <div
                            class={`val mono ${lastChip.foreign_inv >= 0 ? 'text-pos' : 'text-neg'}`}
                        >
                            {lastChip.foreign_inv?.toLocaleString()}
                        </div>
                    </div>
                    <div class="c-card">
                        <label>TRUST (投信)</label>
                        <div
                            class={`val mono ${lastChip.invest_trust >= 0 ? 'text-pos' : 'text-neg'}`}
                        >
                            {lastChip.invest_trust?.toLocaleString()}
                        </div>
                        {
                            trustStreak > 1 && (
                                <div class="streak-badge mono">BULLISH {trustStreak}D</div>
                            )
                        }
                    </div>
                    <div class="c-card">
                        <label>DEALER (自營商)</label>
                        <div class={`val mono ${lastChip.dealer >= 0 ? 'text-pos' : 'text-neg'}`}>
                            {lastChip.dealer?.toLocaleString()}
                        </div>
                    </div>
                    <div class="c-card total">
                        <label>TOTAL INSTITUTIONAL</label>
                        <div class={`val mono ${chipTotal >= 0 ? 'text-pos' : 'text-neg'}`}>
                            {chipTotal.toLocaleString()}
                        </div>
                    </div>
                </div>

                <div class="visual-section">
                    <h3 class="mono">> INSTITUTIONAL_FLOW_HISTORY</h3>
                    <div class="chips-table-wrap">
                        <table class="chips-table">
                            <thead>
                                <tr>
                                    <th>DATE</th>
                                    <th>FOREIGN</th>
                                    <th>TRUST</th>
                                    <th>DEALER</th>
                                </tr>
                            </thead>
                            <tbody>
                                {
                                    chips.slice(0, 8).map(c => (
                                        <tr>
                                            <td class="mono">{c.date}</td>
                                            <td
                                                class={`mono ${c.foreign_inv >= 0 ? 'text-pos' : 'text-neg'}`}
                                            >
                                                {c.foreign_inv?.toLocaleString()}
                                            </td>
                                            <td
                                                class={`mono ${c.invest_trust >= 0 ? 'text-pos' : 'text-neg'}`}
                                            >
                                                {c.invest_trust?.toLocaleString()}
                                            </td>
                                            <td
                                                class={`mono ${c.dealer >= 0 ? 'text-pos' : 'text-neg'}`}
                                            >
                                                {c.dealer?.toLocaleString()}
                                            </td>
                                        </tr>
                                    ))
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Technical Tab -->
            <div class="tab-pane" id="pane-technical">
                <div class="tech-grid">
                    <div class="stat-box">
                        <label>TREND_INTENSITY (MA)</label>
                        <div class="value mono">
                            {details.ma5?.toFixed(2)} / {details.ma20?.toFixed(2)}
                        </div>
                        <div class={`sub ${details.ma5 > details.ma20 ? 'text-pos' : 'text-neg'}`}>
                            {
                                details.ma5 > details.ma20
                                    ? '↑ ASCENDING_CHANNEL'
                                    : '↓ CORRECTION_PHASE'
                            }
                        </div>
                    </div>
                    <div class="stat-box">
                        <label>VOL_RATIO_20D</label>
                        <div class="value mono">{(details.volume / 1000000).toFixed(2)}M</div>
                        <div class="sub">Accumulation phase monitoring</div>
                    </div>
                </div>

                <div class="tech-indicators-recon">
                    <div class="ind-item">
                        <div class="ind-name mono">MACD_SIGNAL</div>
                        <div
                            class={`ind-val mono ${details.close > details.ma5 ? 'text-pos' : 'text-neg'}`}
                        >
                            {
                                details.close > details.ma5
                                    ? 'BULLISH_RECOVERY'
                                    : 'BEARISH_DIVERGENCE'
                            }
                        </div>
                    </div>
                    <div class="ind-item">
                        <div class="ind-name mono">RSI_14</div>
                        <div class="ind-val mono">--</div>
                        <div class="ind-hint mono">NEUTRAL_ZONE</div>
                    </div>
                    <div class="ind-item">
                        <div class="ind-name mono">DMI_ADX</div>
                        <div class="ind-val mono">--</div>
                        <div class="ind-hint mono">LOW_TREND_STRENGTH</div>
                    </div>
                </div>

                <div class="placeholder-msg mono">
                    > INDICATOR_ENGINE: [RECON_V4]<br />
                    > REAL_TIME_DATA_FLOW: [STABLE]
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function initTabs() {
        const container = document.querySelector('.data-tabs-container');
        if (!container) return;

        const buttons = container.querySelectorAll('.tab-btn');
        const panes = container.querySelectorAll('.tab-pane');

        buttons.forEach(btn => {
            btn.addEventListener('click', () => {
                const tab = btn.getAttribute('data-tab');

                // Update buttons
                buttons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                // Update panes
                panes.forEach(p => p.classList.remove('active'));
                const target = container.querySelector(`#pane-${tab}`);
                if (target) target.classList.add('active');
            });
        });
    }

    document.addEventListener('astro:page-load', initTabs);
</script>

