---
// ProSidebarNav.astro
const currentPath = Astro.url.pathname;
const isCurrentPath = (path: string) =>
    currentPath === path || (path !== '/' && currentPath.startsWith(path));

const navItems = [
    { label: 'Valuation (‰º∞ÂÄº)', path: '/valuation', icon: 'üí∞' },
    { label: 'Chips (Á±åÁ¢º)', path: '/chips', icon: 'ü§ù' },
    { label: 'Technical (ÊäÄË°ì)', path: '/technical', icon: 'üìà' },
];

const btmItems: { label: string; path: string; icon: string }[] = [];
---

<aside class="sidebar-container" id="app-sidebar">
    <div class="sidebar-logo">
        <a href="/">
            <div class="logo-icon">‚ñ≤</div>
            <span class="logo-text font-display">TWStock</span>
        </a>
    </div>

    <nav class="sidebar-nav main-nav">
        {
            navItems.map(item => (
                <a
                    href={item.path}
                    class={`nav-item ${isCurrentPath(item.path) ? 'active' : ''}`}
                    title={item.label}
                >
                    <span class="nav-icon">{item.icon}</span>
                    <span class="nav-label">{item.label}</span>
                    {isCurrentPath(item.path) && <div class="active-indicator" />}
                </a>
            ))
        }
    </nav>

    <div class="spacer"></div>

    <nav class="sidebar-nav bottom-nav">
        {
            btmItems.map(item => (
                <a
                    href={item.path}
                    class={`nav-item ${isCurrentPath(item.path) ? 'active' : ''}`}
                    title={item.label}
                >
                    <span class="nav-icon">{item.icon}</span>
                    <span class="nav-label">{item.label}</span>
                </a>
            ))
        }
    </nav>
</aside>

<style>
    /* Premium Sidebar Configuration */
    .sidebar-container {
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        width: 72px; /* Collapsed Width */
        background: var(--c-bg-app); /* Deep Background */
        border-right: 1px solid var(--c-border);
        display: flex;
        flex-direction: column;
        transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        z-index: 40;
        overflow: hidden;
    }

    /* Premium Glow Border Effect */
    .sidebar-container::after {
        content: '';
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;
        width: 1px;
        background: linear-gradient(
            180deg,
            transparent 0%,
            rgba(var(--c-accent-rgb), 0.5) 50%,
            transparent 100%
        );
        opacity: 0;
        transition: opacity 0.3s;
    }

    .sidebar-container:hover {
        width: 240px; /* Expanded Width */
        box-shadow: 20px 0 50px rgba(0, 0, 0, 0.5);
    }

    .sidebar-container:hover::after {
        opacity: 1; /* Reveal glowing edge */
    }

    /* Logo Area */
    .sidebar-logo {
        height: 72px;
        display: flex;
        align-items: center;
        padding-left: 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        flex-shrink: 0;
    }

    .sidebar-logo a {
        display: flex;
        align-items: center;
        gap: 16px;
        text-decoration: none;
        color: var(--c-text-primary);
        width: 100%;
    }

    .logo-icon {
        width: 32px;
        height: 32px;
        background: var(--c-accent);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        font-weight: 800;
        box-shadow: 0 0 15px rgba(var(--c-accent-rgb), 0.5);
        flex-shrink: 0;
    }

    .logo-text {
        font-size: 20px;
        font-weight: 800;
        letter-spacing: -0.5px;
        white-space: nowrap;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.2s 0.1s;
    }

    .sidebar-container:hover .logo-text {
        opacity: 1;
        transform: translateX(0);
    }

    /* Navigation Common */
    .sidebar-nav {
        display: flex;
        flex-direction: column;
        padding: 16px 12px;
        gap: 8px;
    }

    .spacer {
        flex: 1;
    }

    /* Nav Item */
    .nav-item {
        display: flex;
        align-items: center;
        height: 48px;
        padding: 0 12px;
        border-radius: 12px;
        color: var(--c-text-muted);
        text-decoration: none;
        position: relative;
        transition: all 0.2s var(--ease-out);
        overflow: hidden;
    }

    .nav-icon {
        font-size: 20px;
        min-width: 24px;
        display: flex;
        justify-content: center;
        z-index: 2;
    }

    .nav-label {
        font-size: 14px;
        font-weight: 600;
        margin-left: 16px;
        white-space: nowrap;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.2s;
        z-index: 2;
    }

    .sidebar-container:hover .nav-label {
        opacity: 1;
        transform: translateX(0);
        transition-delay: 0.1s;
    }

    /* Hover & Active States */
    .nav-item:hover {
        color: var(--c-text-primary);
        background: rgba(255, 255, 255, 0.05);
    }

    .nav-item.active {
        color: var(--c-text-primary);
        background: rgba(59, 130, 246, 0.15); /* Accent tint */
    }

    .active-indicator {
        position: absolute;
        left: 0;
        top: 25%;
        height: 50%;
        width: 3px;
        background: var(--c-accent);
        border-radius: 0 4px 4px 0;
        box-shadow: 0 0 10px var(--c-accent);
    }

    /* Responsive */
    @media (max-width: 768px) {
        /* On mobile, sidebar is hidden unless toggled. 
           Mobile layout uses Bottom Tab Bar normally */
        .sidebar-container {
            transform: translateX(-100%);
            width: 240px; /* Force wide on mobile drawer */
        }

        .sidebar-container.mobile-open {
            transform: translateX(0);
        }

        .logo-text,
        .nav-label {
            opacity: 1 !important;
            transform: translateX(0) !important;
        }
    }
</style>
