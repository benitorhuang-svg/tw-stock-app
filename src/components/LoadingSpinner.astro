---
interface Props {
    size?: "sm" | "md" | "lg";
    text?: string;
}

const { size = "md", text } = Astro.props;
---

<div class={`loading-spinner size-${size}`}>
    <div class="spinner"></div>
    {text && <span class="loading-text">{text}</span>}
</div>

<style>
    .loading-spinner {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .spinner {
        border: 3px solid var(--border);
        border-top-color: var(--accent);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .loading-text {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Sizes */
    .size-sm .spinner {
        width: 16px;
        height: 16px;
        border-width: 2px;
    }

    .size-md .spinner {
        width: 24px;
        height: 24px;
    }

    .size-lg .spinner {
        width: 40px;
        height: 40px;
        border-width: 4px;
    }
</style>
