---
/**
 * PageHero.astro â€” Page title section with breadcrumb support
 */
interface Props {
    title: string;
    subtitle?: string;
    symbol?: string;
    class?: string;
}

const { title, subtitle, symbol, class: className = '' } = Astro.props;
---

<header class:list={['flex items-start justify-between mb-6', className]}>
    <div class="flex flex-col gap-1">
        <div class="flex items-center gap-3">
            <h1 class="text-2xl lg:text-3xl font-bold tracking-tight text-text-primary">
                {title}
            </h1>
            {symbol && <span class="font-mono text-sm text-text-muted font-normal">{symbol}</span>}
        </div>
        {subtitle && <p class="text-sm text-text-secondary">{subtitle}</p>}
    </div>
    <div>
        <slot />
    </div>
</header>
