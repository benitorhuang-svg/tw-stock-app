---
/**
 * TradeTape.astro
 */
interface TradeRecord {
    time: string;
    price: number;
    vol: number;
    type: 'buy' | 'sell';
}

interface Props {
    tradeTape: TradeRecord[];
}
const { tradeTape } = Astro.props;
---

<!-- Trade Tape -->
<div class="glass-card p-4 max-h-[300px] overflow-y-auto">
    <h3 class="terminal-label mb-3">逐筆明細</h3>
    <div class="space-y-0.5">
        {
            tradeTape.map(t => (
                <div class="flex items-center justify-between text-xs font-mono px-1 py-1 rounded hover:bg-white/[0.02] transition-colors">
                    <span class="text-text-muted">{t.time}</span>
                    <span class:list={[t.type === 'buy' ? 'text-bullish' : 'text-bearish']}>
                        {t.price.toFixed(2)}
                    </span>
                    <span class="text-text-muted">{t.vol}</span>
                </div>
            ))
        }
    </div>
</div>
