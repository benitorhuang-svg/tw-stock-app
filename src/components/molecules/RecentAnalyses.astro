---
/**
 * RecentAnalyses.astro - List of recently visited entities
 */
---

<div class="glass-card p-8 border-white/5 flex flex-col h-full bg-white/[0.01]">
    <div class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-3">
            <div class="w-1.5 h-1.5 rounded-full bg-accent"></div>
            <h3 class="text-[10px] font-mono font-black text-white/80 uppercase tracking-[0.2em]">
                Temporal Registry
            </h3>
        </div>
        <button
            id="clear-recent"
            class="text-[9px] font-mono font-bold text-white/20 hover:text-accent transition-colors uppercase tracking-widest"
        >
            Wipe_Logs
        </button>
    </div>

    <div class="space-y-3 flex-1" id="recent-analyses">
        <div class="flex flex-col items-center justify-center py-12 text-center opacity-20 group">
            <div class="text-3xl mb-4 group-hover:scale-110 transition-transform">⏲️</div>
            <span class="text-[9px] font-mono uppercase tracking-[0.2em]">No_History_Found</span>
        </div>
    </div>
</div>
