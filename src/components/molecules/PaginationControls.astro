---
/**
 * PaginationControls.astro - Molecule for table pagination
 */
interface Props {
    prevId: string;
    nextId: string;
    pageNumId: string;
    class?: string;
}

const { prevId, nextId, pageNumId, class: className = '' } = Astro.props;
---

<div
    class:list={[
        'flex items-center gap-1.5 p-1 bg-surface border border-border rounded-xl shadow-xl',
        className,
    ]}
>
    <button
        id={prevId}
        class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-surface-hover hover:text-accent disabled:opacity-10 transition-all text-xs text-text-muted"
        disabled>◀</button
    >
    <div class="px-3 text-[10px] font-mono font-black text-text-primary border-x border-border">
        第 <span id={pageNumId} class="text-accent">0</span> 頁
    </div>
    <button
        id={nextId}
        class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-surface-hover hover:text-accent disabled:opacity-10 transition-all text-xs text-text-muted"
        disabled>▶</button
    >
</div>
