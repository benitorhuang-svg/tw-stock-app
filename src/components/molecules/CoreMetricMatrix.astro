---
/**
 * CoreMetricMatrix.astro
 */
import { fmtVol } from '../../utils/format';

interface Props {
    open: number;
    volume: number;
    high: number;
    low: number;
}

const { open, volume, high, low } = Astro.props;
---

<div class="glass-card p-6 border-l-4 border-l-accent overflow-hidden relative">
    <h3 class="text-[9px] font-mono font-black text-text-muted/70 uppercase tracking-[0.3em] mb-4">
        Core Metrics
    </h3>
    <div class="grid grid-cols-2 gap-y-6 gap-x-4">
        <div>
            <div class="text-[8px] font-mono text-text-muted/50 uppercase tracking-widest mb-1">
                Open
            </div>
            <div class="text-sm font-mono font-bold text-text-secondary">
                {open.toFixed(2)}
            </div>
        </div>
        <div>
            <div class="text-[8px] font-mono text-text-muted/50 uppercase tracking-widest mb-1">
                Vol_Aggregate
            </div>
            <div class="text-sm font-mono font-bold text-text-secondary">
                {fmtVol(volume)}
            </div>
        </div>
        <div>
            <div class="text-[8px] font-mono text-text-muted/50 uppercase tracking-widest mb-1">
                High_Probe
            </div>
            <div class="text-sm font-mono font-bold text-bullish/80">
                {high.toFixed(2)}
            </div>
        </div>
        <div>
            <div class="text-[8px] font-mono text-text-muted/50 uppercase tracking-widest mb-1">
                Low_Probe
            </div>
            <div class="text-sm font-mono font-bold text-bearish/80">
                {low.toFixed(2)}
            </div>
        </div>
    </div>
</div>
