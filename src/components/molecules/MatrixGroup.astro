---
/**
 * MatrixGroup.astro - A logical grouping for matrix sliders
 */
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<div class="space-y-6">
    <div class="flex items-center gap-2 mb-2">
        <div class="w-3 h-0.5 bg-accent/40"></div>
        <span class="text-[9px] font-mono font-bold text-text-muted/70 uppercase tracking-widest">
            {title}
        </span>
    </div>
    <slot />
</div>
