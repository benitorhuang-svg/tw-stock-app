---
import type { Strategy } from '../../data/strategies';

interface Props {
    strategy: Strategy;
    variant?: 'default' | 'compact';
    count?: number;
}

const { strategy, variant = 'default', count } = Astro.props;

const categoryLabels: Record<string, string> = {
    fundamental: 'FUND',
    technical: 'TECH',
    sentiment: 'SENT',
};

const categoryColors: Record<string, string> = {
    fundamental: '#10b981', // green
    technical: '#3b82f6', // blue
    sentiment: '#f59e0b', // orange
};

const isPos = strategy.category === 'fundamental';
const isNeu = strategy.category === 'technical';
---

<a href={`/strategies/${strategy.id}`} class="strategy-card glass-card glow-wrapper">
    <div class={`glow-bg ${isPos ? 'pos-glow' : isNeu ? 'accent-glow' : 'warn-glow'}`}></div>

    <div class="card-content">
        <div class="card-top">
            <div class="icon-wrapper glass-icon">
                {strategy.icon}
            </div>
            <div class="badges mono">
                <span
                    class="category-tag"
                    style={`--bc: ${categoryColors[strategy.category]}; color: var(--bc); border-color: var(--bc); background: rgba(0,0,0,0.2);`}
                >
                    {categoryLabels[strategy.category]}
                </span>
                {count !== undefined && <span class="count-badge">{count} MATCH</span>}
            </div>
        </div>

        <div class="strategy-info">
            <h3 class="strategy-name mono">{strategy.name}</h3>
            {
                variant === 'default' && (
                    <p class="strategy-desc text-muted mono">{strategy.description}</p>
                )
            }
        </div>

        {
            variant === 'default' && (
                <div class="card-footer mono">
                    {strategy.conditions.slice(0, 3).map(cond => (
                        <span class="tag">{cond}</span>
                    ))}
                </div>
            )
        }
    </div>
</a>

<style>
    .strategy-card {
        display: block;
        text-decoration: none;
        color: inherit;
        background: var(--c-bg-glass);
        backdrop-filter: var(--glass-blur);
        -webkit-backdrop-filter: var(--glass-blur);
        border: 1px solid var(--c-border-glass, rgba(60, 80, 120, 0.2));
        border-radius: 12px;
        position: relative;
        overflow: hidden;
        transition:
            transform 0.2s,
            border-color 0.2s;
        height: 100%;
    }

    .strategy-card:hover {
        transform: translateY(-4px);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .glow-wrapper {
        position: relative;
    }
    .glow-bg {
        position: absolute;
        inset: 0;
        opacity: 0;
        pointer-events: none;
        z-index: 0;
        transition: opacity 0.3s ease;
        background: radial-gradient(
            300px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
            var(--glow-color, rgba(255, 255, 255, 0.05)),
            transparent 40%
        );
    }
    .strategy-card:hover .glow-bg {
        opacity: 1;
    }

    .pos-glow {
        --glow-color: rgba(16, 185, 129, 0.1);
    }
    .accent-glow {
        --glow-color: rgba(59, 130, 246, 0.1);
    }
    .warn-glow {
        --glow-color: rgba(245, 158, 11, 0.1);
    }

    .card-content {
        padding: 20px;
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        gap: 16px;
        height: 100%;
    }

    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }
    .icon-wrapper {
        font-size: 24px;
        padding: 8px;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .badges {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 4px;
    }

    .category-tag,
    .count-badge {
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 9px;
        font-weight: 800;
        letter-spacing: 1px;
        border: 1px solid;
    }
    .count-badge {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        color: var(--c-text-muted);
    }

    .strategy-info {
        flex: 1;
    }
    .strategy-name {
        margin: 0 0 8px 0;
        font-size: 14px;
        letter-spacing: 1px;
        color: #fff;
    }
    .strategy-desc {
        margin: 0;
        font-size: 10px;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        opacity: 0.8;
    }

    .card-footer {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-top: auto;
        padding-top: 16px;
        border-top: 1px dashed rgba(255, 255, 255, 0.1);
    }
    .tag {
        font-size: 9px;
        padding: 2px 6px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 4px;
        color: var(--c-text-muted);
        white-space: nowrap;
    }
</style>
