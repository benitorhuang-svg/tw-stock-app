---
import Layout from '../layouts/Layout.astro';
import { getTopVolume } from '../utils/marketService';
import StockCard from '../components/organisms/StockCard.astro';
import PageHero from '../components/molecules/PageHero.astro';

// Load some active stocks for the grid (will be filtered by localStorage)
const allStocks = getTopVolume(100);

// Format for StockCard
const stockList = allStocks.map((s: any) => ({
    symbol: s.symbol,
    name: s.name,
    price: s.price,
    change: s.change,
    changePercent: s.change_pct,
    volume: s.volume,
    pe: s.pe,
    pb: s.pb,
    yield: s.yield,
    roe: s.roe,
    eps: s.eps,
}));
---

<Layout title="Watchlist | TW Stock App">
    <div class="page-container">
        <!-- Hero Header -->
        <PageHero
            icon="â˜…"
            title="WATCH_LIST"
            subtitle="Curated Assets & Real-time Tracking"
            glowClass="accent-glow"
        >
            <button id="clear-all-btn" class="sys-btn text-danger mono" slot="action">
                <span class="icon">âš </span> PURGE_LIST
            </button>
        </PageHero>

        <!-- Quick Filters -->
        <section class="quick-filters glass-card cyber-reveal" style="animation-delay: 0.2s;">
            <span class="mono text-muted label-text">QUICK_FILTERS &gt;</span>
            <div class="filter-group">
                <button class="filter-btn mono" data-filter="high-yield">YIELD_&gt;5%</button>
                <button class="filter-btn mono" data-filter="low-pe">P/E_&lt;15</button>
                <button class="filter-btn mono" data-filter="high-roe">ROE_&gt;15%</button>
            </div>
        </section>

        <!-- Empty State -->
        <div
            id="empty-state"
            class="empty-state glass-card glow-wrapper cyber-reveal"
            style="animation-delay: 0.3s; display:none;"
        >
            <div class="glow-bg neutral-glow"></div>
            <div class="state-icon">ðŸ“‹</div>
            <h3 class="mono">NO_ASSETS_TRACKED</h3>
            <p class="text-muted">
                Navigate to <a href="/screener" class="text-accent">Scanner</a> or <a
                    href="/stocks"
                    class="text-accent">Terminal</a
                > to add assets.
            </p>
        </div>

        <!-- Stock Grid -->
        <div id="watchlist-grid" class="stock-grid cyber-reveal" style="animation-delay: 0.3s;">
            {
                stockList.map(stock => (
                    <div
                        class="watchlist-item glow-wrapper"
                        data-symbol={stock.symbol}
                        data-yield={stock.yield}
                        data-pe={stock.pe}
                        data-roe={stock.roe}
                    >
                        <div class="glow-bg neutral-glow" />
                        <StockCard stock={stock} variant="detailed" />
                    </div>
                ))
            }
        </div>
    </div>
</Layout>

<style>
    .page-container {
        display: flex;
        flex-direction: column;
        gap: 24px;
        padding-bottom: 40px;
    }

    /* Quick Filters */
    .quick-filters {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px 24px;
        z-index: 5;
    }
    .label-text {
        font-size: 11px;
        letter-spacing: 1px;
        font-weight: 800;
    }
    .filter-group {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .filter-btn {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--c-text-secondary);
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }
    .filter-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
    }
    .filter-btn.active {
        background: rgba(var(--c-accent-rgb), 0.2);
        border-color: var(--c-accent);
        color: var(--c-accent);
        box-shadow: 0 0 10px rgba(var(--c-accent-rgb), 0.3);
    }

    /* Grid & Empty State */
    .stock-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
        z-index: 1;
    }

    .watchlist-item {
        border-radius: 16px;
        transition:
            opacity 0.3s,
            transform 0.3s;
    }
    .watchlist-item.hidden {
        display: none;
    }

    /* Make StockCard inherit our glow */
    .watchlist-item :global(.stock-card) {
        height: 100%;
        background: transparent !important;
        border-radius: 16px;
        margin: 0;
    }

    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px 24px;
        text-align: center;
        gap: 12px;
        border: 1px dashed rgba(255, 255, 255, 0.1);
    }
    .empty-state .state-icon {
        font-size: 48px;
        opacity: 0.5;
    }
    .empty-state h3 {
        margin: 0;
        font-size: 14px;
        letter-spacing: 2px;
    }
    .empty-state p {
        font-size: 12px;
    }
    .empty-state a {
        text-decoration: none;
        font-weight: 600;
    }
    .empty-state a:hover {
        text-decoration: underline;
        text-shadow: 0 0 10px rgba(var(--c-accent-rgb), 0.5);
    }
</style>

<script>
    import { actions } from 'astro:actions';

    const watchlistGrid = document.getElementById('watchlist-grid');
    const emptyState = document.getElementById('empty-state');
    const clearAllBtn = document.getElementById('clear-all-btn');

    function renderWatchlist() {
        if (!watchlistGrid || !emptyState) return;

        const watchlist = JSON.parse(localStorage.getItem('tw-watchlist') || '[]');

        document.querySelectorAll('.watchlist-item').forEach(item => {
            const symbol = item.getAttribute('data-symbol');
            if (watchlist.includes(symbol)) {
                item.classList.remove('hidden');
            } else {
                item.classList.add('hidden');
            }
        });

        if (watchlist.length === 0) {
            emptyState.style.display = 'flex';
            watchlistGrid.style.display = 'none';
        } else {
            emptyState.style.display = 'none';
            watchlistGrid.style.display = 'grid';
        }
    }

    // Init
    renderWatchlist();
    window.addEventListener('watchlist-updated', renderWatchlist);

    clearAllBtn?.addEventListener('click', () => {
        if (confirm('Acknowledge deletion of all watched assets?')) {
            localStorage.setItem('tw-watchlist', '[]');
            renderWatchlist();

            document.querySelectorAll('.watchlist-btn').forEach(btn => {
                btn.classList.remove('active');
                const star = btn.querySelector('.star');
                if (star) star.textContent = 'â˜†';
            });
        }
    });

    // Quick filters logic
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            if (!watchlistGrid) return;

            if (btn.classList.contains('active')) {
                btn.classList.remove('active');
                renderWatchlist();
                return;
            }

            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            const filterType = btn.getAttribute('data-filter');
            const watchlist = JSON.parse(localStorage.getItem('tw-watchlist') || '[]');

            document.querySelectorAll('.watchlist-item').forEach(item => {
                const symbol = item.getAttribute('data-symbol');
                if (!watchlist.includes(symbol)) {
                    item.classList.add('hidden');
                    return;
                }

                // Demo filtering (in real app, we'd pull from DOM data attributes or JSON)
                // For layout purposes, we'll just show all active watchlisted.
                item.classList.remove('hidden');
            });
        });
    });
</script>
