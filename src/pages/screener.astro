---
/**
 * screener.astro — Stock Screener Page
 * Spec: 005-ui-layout, connected to M3 screening-scoring module
 */
import MainTerminal from '../layouts/MainTerminal.astro';
import StockScreener from '../components/organisms/StockScreener.astro';
---

<MainTerminal title="智慧選股" fullWidth={true}>
    <section
        class="px-4 lg:px-6 pt-4 lg:pt-5 pb-3 border-b border-border bg-base-deep/50 backdrop-blur-sm"
    >
        <div
            class="max-w-[1600px] mx-auto w-full flex flex-col sm:flex-row sm:items-end justify-between gap-3"
        >
            <div>
                <h1 class="text-xl lg:text-2xl font-bold text-text-primary tracking-tight">
                    選股引擎
                </h1>
                <p class="text-xs text-text-secondary mt-1">
                    以 SQLite 索引查詢篩選，策略條件即時運算
                </p>
            </div>
            <div class="flex items-center gap-2">
                <span class="tag-chip">SQLite</span>
                <span class="tag-chip">本地資料庫</span>
                <span class="w-1.5 h-1.5 rounded-full bg-bullish ring-pulse"></span>
            </div>
        </div>
    </section>

    <div class="px-4 lg:px-6 py-4">
        <div class="max-w-[1600px] mx-auto w-full">
            <StockScreener />
        </div>
    </div>
</MainTerminal>
