        {
            latest && (
                <div class="mono" style="text-align: right;">
                    <div style="font-size: 28px; font-weight: 800;">
                        {latest.Close.toFixed(2)}{' '}
                        <span style="font-size: 14px; color: var(--c-text-muted); font-weight: 500;">
                            TWD
                        </span>
                    </div>
                    <div
                        class={`text-pos ${latest.Change >= 0 ? 'text-pos' : 'text-neg'}`}
                        style="font-size: 13px;"
                    >
                        {latest.Change >= 0 ? '+' : ''}
                        {latest.Change.toFixed(2)} ({latest.ChangePct.toFixed(2)}%)
                    </div>
                </div>
            )
        }
    </header>

    <div style="display: flex; flex-direction: column; gap: 20px; flex: 1; min-height: 0;">
        <!-- Top row: Technical Stats -->
        <section class="glass-panel" style="flex-shrink: 0;">
            <div class="data-grid-4" style="padding: 16px;">
                <div class="t-card">
                    <span class="label">‰ªäÊó•Êàê‰∫§Èáè</span>
