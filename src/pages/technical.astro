                        <span>{technical.volRatio.toFixed(2)}</span>
                        <span class="fire-badge">üî• ÁàÜÈáè</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Bottom row: Chart -->
        <section
            class="glass-panel"
            style="flex: 1; display: flex; flex-direction: column; min-height: 0;"
        >
            <div class="section-header">
                <h2 class="section-title">Ëµ∞Âã¢ÂúñËàáÂùáÁ∑ö</h2>
                <div class="ma-toggles mono">
                    <label class="ma-lbl"
                        ><input type="checkbox" checked />
                        <span class="ma-c" style="color: #3b82f6;">MA5</span></label
                    >
