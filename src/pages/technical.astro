<style>
    .t-card {
        padding: 12px 16px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 6px;
        border-radius: var(--radius-sm);
        border: 1px solid var(--c-border);
        background: rgba(255, 255, 255, 0.02);
    }
    .t-card .label {
        font-size: 12px;
        color: var(--c-text-secondary);
    }
    .t-card .val {
        font-size: 24px;
        font-weight: 700;
        display: flex;
        align-items: baseline;
        gap: 4px;
    }
    .t-card .unit {
        font-size: 12px;
        color: var(--c-text-muted);
    }

    .surge-card {
        background:
            radial-gradient(circle at right, rgba(239, 68, 68, 0.1), transparent),
            rgba(255, 255, 255, 0.02);
        border-color: rgba(239, 68, 68, 0.3);
    }

    .ma-toggles {
        display: flex;
        gap: 16px;
        font-size: 12px;
        align-items: center;
    }
    .ma-lbl {
        display: flex;
        align-items: center;
        gap: 6px;
        cursor: pointer;
    }
    .ma-lbl input {
        accent-color: var(--c-accent);
    }
    .ma-c {
        font-weight: 600;
    }

    .chart-wrapper {
        flex: 1;
        padding: 16px 24px 24px 24px;
        position: relative;
        min-height: 0; /* important for flexible charting space */
    }

    .empty-state {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--c-text-muted);
        letter-spacing: 2px;
        font-size: 14px;
    }

    .fire-badge {
        font-size: 11px;
        background: rgba(239, 68, 68, 0.15);
        color: var(--c-danger);
        padding: 4px 8px;
        border-radius: 4px;
        border: 1px solid rgba(239, 68, 68, 0.3);
        font-family: sans-serif;
        font-weight: bold;
    }
</style>
