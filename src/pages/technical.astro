---
import Layout from '../layouts/Layout.astro';
import StockChart from '../components/organisms/StockChart.astro';
import { fetchStockPrices } from '../utils/priceService';

const symbol = '2330';
const prices = await fetchStockPrices(symbol);
const latest = prices.length > 0 ? prices[prices.length - 1] : null;

const technical = {
    volToday: latest ? latest.Volume : 280726,
    vol5d: 102601,
    vol20d: 172638,
    volRatio: 2.74,
};
---

<Layout title="ÊäÄË°ìÈù¢ËàáÂãïËÉΩÊåáÊ®ô">
    <header class="page-header">
