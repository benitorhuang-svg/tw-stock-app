---
/**
 * institutional.astro — Forensic_Analytics (Institutional) Dashboard
 * Highly specialized, high-density terminal for institutional data.
 */
import MainTerminal from '../layouts/MainTerminal.astro';
import InstitutionalHeader from '../components/molecules/InstitutionalHeader.astro';
import InstitutionalPulseHUD from '../components/organisms/InstitutionalPulseHUD.svelte';
import InstitutionalMatrix from '../components/organisms/InstitutionalMatrix.svelte';
import ForensicRadar from '../components/organisms/ForensicRadar.svelte';
import InstitutionalAnalytics from '../components/organisms/InstitutionalAnalytics.svelte';
import ForensicReport from '../components/organisms/ForensicReport.svelte';
import ForensicTicker from '../components/molecules/ForensicTicker.svelte';
---

<MainTerminal title="法人監控" fullWidth>
    <div class="px-4 lg:px-6 py-4 flex flex-col h-full bg-base gap-6">
        <!-- Dashboard Header -->
        <InstitutionalHeader />

        <!-- Pulse HUD (Unified Command & Stats) -->
        <InstitutionalPulseHUD client:load />

        <!-- Monitoring Matrix (Core Content) -->
        <InstitutionalMatrix client:load />

        <!-- Forensic Alpha Radar (Forensic Expansion) -->
        <ForensicRadar client:visible />

        <!-- Abnormal Market Report (Forensic Archetypes) -->
        <ForensicReport client:visible />

        <!-- Analytics Engine -->
        <InstitutionalAnalytics client:visible />

        <!-- Global Signal Stream -->
        <div class="mt-auto py-4 border-t border-border/10">
            <ForensicTicker client:load />
        </div>
    </div>
</MainTerminal>

<script src="../scripts/institutional-engine.ts"></script>
