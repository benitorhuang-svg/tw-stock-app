---
/**
 * institutional.astro — Institutional Monitoring Terminal
 * High-performance monitoring of institutional accumulation streaks.
 */
import MainTerminal from '../layouts/MainTerminal.astro';
import InstitutionalHeader from '../components/molecules/InstitutionalHeader.astro';
import InstitutionalMatrix from '../components/organisms/InstitutionalMatrix.svelte';
import ForensicTicker from '../components/molecules/ForensicTicker.astro';
---

<MainTerminal title="法人連買監控 | Institutional Tracking" fullWidth>
    <div class="h-full flex flex-col p-4 lg:p-10 gap-8 overflow-hidden">
        <!-- Header Section -->

        <InstitutionalHeader />

        <!-- Monitoring Matrix -->
        <InstitutionalMatrix client:idle />

        <!-- Signal Stream -->
        <div class="mt-auto pt-6 border-t border-white/5 flex items-center justify-between">
            <ForensicTicker />
            <div class="flex items-center gap-6">
                <span class="text-[9px] font-mono text-white/20 uppercase tracking-[0.3em]"
                    >Institutional_Stream_Uplink: ESTABLISHED</span
                >
                <div class="flex gap-1">
                    <div class="w-1 h-1 rounded-full bg-bullish animate-bounce"></div>
                    <div
                        class="w-1 h-1 rounded-full bg-accent animate-bounce"
                        style="animation-delay: 0.1s"
                    >
                    </div>
                    <div
                        class="w-1 h-1 rounded-full bg-yellow-400 animate-bounce"
                        style="animation-delay: 0.2s"
                    >
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../scripts/institutional-engine.ts"></script>
</MainTerminal>
