import Layout from "../../layouts/Layout.astro";
import { getStocksWithPrices } from "../../utils/stockDataService";

// Load real stock data with full details
const allStocks = await getStocksWithPrices();

// Format stocks for client-side usage (keep payload minimal but sufficient)
const stockList = allStocks.map(s => ({
    symbol: s.symbol,
    name: s.name,
    price: s.price,
    change: s.change,
    changePercent: s.changePercent,
    volume: s.volume,
    pe: s.pe,
    yield: s.yield,
    // Pre-calculate trend for sparklines to save client computation if needed,
    // but here we'll simulate it in JS for visual effect
}));
---

<Layout title="ÂÄãËÇ°ÂàÜÊûê">
    <div class="page-container">
        <!-- Floating Header Section -->
        <div class="page-header">
            <div class="header-content">
                <div class="title-group">
                    <h1>üìä ÂÄãËÇ°ÂàÜÊûê</h1>
                    <p class="subtitle">ÂÖ®Â∏ÇÂ†¥ {stockList.length} Ê™îËÇ°Á•®Âç≥ÊôÇÁõ£Êéß</p>
