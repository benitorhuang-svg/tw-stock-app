import Layout from '../../layouts/Layout.astro';
import { getTopVolume } from '../../utils/marketService';

// Load real stock data with full details from SQLite
const allStocks = getTopVolume(500);

// Format stocks for client-side usage
const stockList = allStocks.map((s: any) => ({
    symbol: s.symbol,
    name: s.name,
    price: s.price,
    change: s.change,
    changePercent: s.change_pct,
    volume: s.volume,
    pe: s.pe,
    yield: s.yield,
}));
---

<Layout title="ÂÄãËÇ°ÂàÜÊûê">
