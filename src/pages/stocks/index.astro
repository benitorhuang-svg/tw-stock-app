<script define:vars={{ initialStocks: stockList }}>
    // --- State Management ---
    const stocks = initialStocks;
    let filteredStocks = [...stocks];
    let currentPage = 1;
    const pageSize = 50;

    // --- DOM Elements ---
    const stockListElement = document.getElementById("stock-list");
    const searchInput = document.getElementById("stock-search");
    const pageInfo = document.getElementById("page-info");
    const prevBtn = document.getElementById("prev-page");
    const nextBtn = document.getElementById("next-page");

    // --- Helper: Generate Sparkline HTML ---
    function getSparklineBars(isGainer) {
        const colorClass = isGainer ? 'pos' : 'neg';
        // Generate pseudo-random heights for visual flair (since we don't have real 7-day history in this view)
        // In a real app, pass the 7d history array.
        const heights = isGainer 
            ? [30, 45, 40, 60, 55, 75, 90] 
            : [80, 70, 60, 65, 40, 30, 20];
        
        return heights.map((h, i) => `
            <div class="spark-bar ${colorClass}" style="height: ${h}%; left: ${i * 16}%"></div>
        `).join('');
    }

    // --- Render Function ---
    function renderPage() {
        if (!stockListElement) return;

        const totalPages = Math.ceil(filteredStocks.length / pageSize) || 1;
        if (currentPage > totalPages) currentPage = totalPages;
        if (currentPage < 1) currentPage = 1;

        const start = (currentPage - 1) * pageSize;
        const end = start + pageSize;
        const pageStocks = filteredStocks.slice(start, end);

        if (pageStocks.length === 0) {
            stockListElement.innerHTML = `
                <div class="no-results">
                    <span class="emoji">üòï</span>
                    <h3>Êâæ‰∏çÂà∞Áõ∏ÈóúËÇ°Á•®</h3>
                    <p>Ë´ãÂòóË©¶ÂÖ∂‰ªñÈóúÈçµÂ≠ó</p>
                </div>
            `;
            pageInfo.textContent = `0 / 0`;
            return;
        }

        // Generate HTML string for maximum performance
        const html = pageStocks.map(stock => {
            const isGainer = stock.change >= 0;
            const trendClass = isGainer ? 'pos' : 'neg';
            const sign = isGainer ? '+' : '';
            const price = stock.price.toFixed(2);
            const change = Math.abs(stock.changePercent).toFixed(2);
            
            return `
            <a href="/stocks/${stock.symbol}/" class="stock-card-pro fade-in">
                <!-- Hover Effect Layer -->
                <div class="card-glow"></div>
                
                <div class="card-main">
                    <!-- 1. Identity -->
                    <div class="col-identity">
                        <span class="symbol">${stock.symbol}</span>
                        <span class="name">${stock.name}</span>
                    </div>

                    <!-- 2. Mini Trend (Visual) -->
                    <div class="col-chart">
                         <div class="sparkline-box">
                             ${getSparklineBars(isGainer)}
                         </div>
                    </div>

                    <!-- 3. Metrics -->
                    <div class="col-price">
                        <span class="price">${price}</span>
                        <span class="change ${trendClass}">${sign}${change}%</span>
                    </div>
                    
                    <!-- 4. Quick Stats (Hover Reveal) -->
                    <div class="col-stats">
                         <div class="stat-pill">Êú¨ÁõäÊØî ${stock.pe || '-'}</div>
                         <div class="stat-pill">ÊÆñÂà©Áéá ${stock.yield || '-'}%</div>
                    </div>
                </div>
            </a>
            `;
        }).join('');

        stockListElement.innerHTML = html;

        // Update Controls
        pageInfo.textContent = `Page ${currentPage} / ${totalPages}`;
        if (prevBtn) prevBtn.disabled = currentPage === 1;
        if (nextBtn) nextBtn.disabled = currentPage === totalPages;
    }

    // --- Event Listeners ---
    
    // Search with Debounce
    let debounceTimer;
    searchInput?.addEventListener("input", (e) => {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(() => {
            const query = e.target.value.toLowerCase().trim();
            filteredStocks = stocks.filter(s => 
                s.symbol.includes(query) || 
                s.name.toLowerCase().includes(query)
            );
            currentPage = 1;
            renderPage();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }, 300);
    });

    // Keyboard Shortcut for Search
    document.addEventListener('keydown', (e) => {
        if (e.key === '/' && document.activeElement !== searchInput) {
            e.preventDefault();
            searchInput?.focus();
        }
    });

    prevBtn?.addEventListener("click", () => {
        if (currentPage > 1) {
            currentPage--;
            renderPage();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    });

    nextBtn?.addEventListener("click", () => {
        const totalPages = Math.ceil(filteredStocks.length / pageSize);
        if (currentPage < totalPages) {
            currentPage++;
            renderPage();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    });

    // Initial Render
    renderPage();
</script>

<style>
    /* 
     * Cyber-Premium Page Styles 
     * Inherits CSS variables from Layout.astro 
     */

    .page-container {
        max-width: 1400px;
        margin: 0 auto;
        padding-bottom: 80px; /* Space for pagination */
    }

    /* --- Floating Header --- */
    .page-header {
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
        position: relative;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        background: var(--c-bg-glass);
        backdrop-filter: var(--glass-blur);
        border: 1px solid var(--c-border);
        padding: 20px 30px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .title-group h1 {
        font-size: 24px;
        font-weight: 800;
        margin-bottom: 4px;
        background: linear-gradient(135deg, #fff 0%, #a5b4fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        color: var(--c-text-secondary);
        font-size: 13px;
    }

    /* --- Floating Search --- */
    .search-box-wrapper {
        position: relative;
        width: 350px;
        display: flex;
        align-items: center;
    }

    .premium-search-input {
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--c-border);
        color: var(--c-text-primary);
        padding: 12px 16px 12px 42px;
        border-radius: 12px;
        font-size: 14px;
        transition: all 0.3s;
        font-family: 'JetBrains Mono', monospace;
    }

    .premium-search-input:focus {
        border-color: var(--c-accent);
        background: rgba(0, 0, 0, 0.5);
        box-shadow: 0 0 0 4px rgba(var(--c-accent-rgb), 0.1);
        outline: none;
    }

    .search-icon {
        position: absolute;
        left: 14px;
        opacity: 0.5;
        font-size: 14px;
        pointer-events: none;
    }

    .search-shortcut {
        position: absolute;
        right: 12px;
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 4px;
        padding: 2px 8px;
        font-size: 10px;
        color: var(--c-text-muted);
        pointer-events: none;
    }

    /* --- Stock Grid --- */
    .stock-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 16px;
    }

    /* --- Pro Stock Card --- */
    :global(.stock-card-pro) {
        display: block;
        background: var(--c-bg-glass);
        border: 1px solid var(--c-border);
        border-radius: 16px;
        padding: 16px;
        text-decoration: none;
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
        height: 100px;
    }

    :global(.stock-card-pro:hover) {
        transform: translateY(-4px);
        background: var(--c-bg-glass-hover);
        border-color: rgba(var(--c-accent-rgb), 0.4);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    :global(.card-main) {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
        position: relative;
        z-index: 2;
    }

    /* Column 1: Identity */
    :global(.col-identity) {
        display: flex;
        flex-direction: column;
        width: 80px;
    }

    :global(.symbol) {
        font-family: 'JetBrains Mono', monospace;
        font-size: 14px;
        font-weight: 800;
        color: var(--c-accent);
        letter-spacing: -0.5px;
    }

    :global(.name) {
        font-size: 13px;
        color: var(--c-text-primary);
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        opacity: 0.9;
    }

    /* Column 2: Sparkline */
    :global(.col-chart) {
        flex: 1;
        height: 40px;
        position: relative;
        margin: 0 16px;
        opacity: 0.7;
    }

    :global(.sparkline-box) {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: flex-end;
        gap: 2px;
    }

    :global(.spark-bar) {
        width: 6px; /* Fat bars */
        background: currentColor;
        border-radius: 2px 2px 0 0;
        opacity: 0.5;
    }
    :global(.spark-bar.pos) { background: var(--c-success); box-shadow: 0 0 8px rgba(var(--c-success-rgb), 0.3); }
    :global(.spark-bar.neg) { background: var(--c-danger); box-shadow: 0 0 8px rgba(var(--c-danger-rgb), 0.3); }

    /* Column 3: Price */
    :global(.col-price) {
        text-align: right;
        display: flex;
        flex-direction: column;
        min-width: 70px;
    }

    :global(.price) {
        font-family: 'JetBrains Mono', monospace;
        font-size: 16px;
        font-weight: 700;
        color: #fff;
    }

    :global(.change) {
        font-size: 12px;
        font-weight: 600;
        margin-top: 2px;
    }
    :global(.change.pos) { color: var(--c-success); }
    :global(.change.neg) { color: var(--c-danger); }

    /* Column 4: Stats (Hidden by default, shown/animated maybe) */
    :global(.col-stats) {
        display: none; /* Can be enabled for larger cards */
    }

    /* Holographic Glow */
    :global(.card-glow) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 50% 0%, rgba(var(--c-accent-rgb), 0.15), transparent 70%);
        opacity: 0;
        transition: opacity 0.3s;
        z-index: 1;
        pointer-events: none;
    }
    :global(.stock-card-pro:hover .card-glow) {
        opacity: 1;
    }

    /* --- Pagination --- */
    .pagination-bar {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(20px);
        padding: 8px 16px;
        border-radius: 50px;
        border: 1px solid var(--c-border);
        display: flex;
        align-items: center;
        gap: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        z-index: 50;
    }

    .nav-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.05);
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

    .nav-btn:hover:not(:disabled) {
        background: var(--c-accent);
        border-color: var(--c-accent);
        transform: scale(1.1);
    }

    .nav-btn:disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }

    .page-counter {
        font-family: 'JetBrains Mono', monospace;
        font-size: 13px;
        font-weight: 700;
        color: var(--c-text-secondary);
        min-width: 80px;
        text-align: center;
    }

    /* --- No Results --- */
    :global(.no-results) {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px;
        color: var(--c-text-muted);
    }
    :global(.no-results .emoji) {
        font-size: 48px;
        display: block;
        margin-bottom: 20px;
    }

    /* --- Animation --- */
    :global(.fade-in) {
        animation: fadeIn 0.4s ease-out forwards;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .header-content {
            flex-direction: column;
            gap: 20px;
            align-items: flex-start;
        }
        .search-box-wrapper {
            width: 100%;
        }
        .stock-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
