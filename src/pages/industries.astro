---
import Layout from '../layouts/Layout.astro';
import { industries } from '../data/industries';
import { getStocksWithPrices, type StockFullData } from '../utils/stockDataService';

// Load real stock data
const allStocks = await getStocksWithPrices();

function getIndustryBySymbol(symbol: string): string {
    const code = parseInt(symbol);
    if (code >= 0 && code < 1000) return 'etf';
    if (code >= 1100 && code < 1200) return 'construction';
    if (code >= 1200 && code < 1300) return 'food';
    if (code >= 1300 && code < 1400) return 'plastic';
    if (code >= 1400 && code < 1500) return 'textile';
    if (code >= 1500 && code < 2000) return 'electronics';
    if (code >= 2000 && code < 2100) return 'steel';
    if (code >= 2100 && code < 2200) return 'plastic';
    if (code >= 2200 && code < 2300) return 'electronics';
    if (code >= 2300 && code < 2500) return 'semiconductor';
    if (code >= 2500 && code < 2600) return 'construction';
    if (code >= 2600 && code < 2700) return 'shipping';
    if (code >= 2700 && code < 2800) return 'tourism';
    if (code >= 2800 && code < 2900) return 'finance';
    if (code >= 2900 && code < 3000) return 'trading';
    if (code >= 3000 && code < 3400) return 'electronics';
    if (code >= 3400 && code < 3700) return 'optoelectronics';
    if (code >= 3700 && code < 4000) return 'electronics';
    if (code >= 4100 && code < 4200) return 'biotech';
    if (code >= 4900 && code < 5000) return 'communication';
    if (code >= 4000 && code < 5000) return 'biotech';
    if (code >= 5000 && code < 6000) return 'electronics';
    if (code >= 6000 && code < 7000) return 'electronics';
    if (code >= 8000 && code < 9000) return 'trading';
    if (code >= 9000 && code < 10000) return 'trading';
    return 'other';
}

const industryStocksMap: Record<string, StockFullData[]> = {};
for (const industry of industries) {
    industryStocksMap[industry.id] = [];
}
for (const stock of allStocks) {
    const industryId = getIndustryBySymbol(stock.symbol);
    if (industryStocksMap[industryId]) {
        industryStocksMap[industryId].push(stock);
    }
}
function getStocksByIndustry(industryId: string): StockFullData[] {
    return industryStocksMap[industryId] || [];
}
import PageHero from '../components/molecules/PageHero.astro';
---

<Layout title="Industries | TW Stock App">
    <div class="industries-container">
        <!-- Hero Header -->
        <PageHero
            icon="ðŸ­"
            title="SECTOR_MATRIX"
            subtitle="Industry classification & category discovery"
            glowClass="neutral-glow"
        >
            <div class="sys-status" slot="action">
                <span class="pulse-dot"></span>
                <span class="mono text-success">TSEC_CLASSIFIED</span>
            </div>
        </PageHero>

        <!-- Category Grid -->
        <div class="industry-grid cyber-reveal" style="animation-delay: 0.2s;">
            {
                industries.map(industry => {
                    const stocks = getStocksByIndustry(industry.id);
                    return (
                        <a
                            href={`#${industry.id}`}
                            class="industry-card glass-card glow-wrapper"
                            data-id={industry.id}
                        >
                            <div class="glow-bg accent-glow" />
                            <div class="card-content">
                                <div class="ind-icon">{industry.icon}</div>
                                <div class="ind-info">
                                    <h3 class="mono">{industry.name}</h3>
                                    <p class="text-muted">{industry.description}</p>
                                </div>
                                <div class="ind-count mono text-accent">{stocks.length} ASSETS</div>
                            </div>
                        </a>
                    );
                })
            }
        </div>

        <!-- Render each sector -->
        <div class="sectors-wrapper cyber-reveal" style="animation-delay: 0.3s;">
            {
                industries.map(industry => {
                    const stocks = getStocksByIndustry(industry.id);
                    if (stocks.length === 0) return null; // Hide empty sectors

                    return (
                        <section id={industry.id} class="sector-section">
                            <header class="sector-header">
                                <h2 class="mono">
                                    <span class="text-accent">{industry.icon}</span> {industry.name}
                                    _SECTOR
                                </h2>
                                <span class="mono text-muted">{industry.description}</span>
                            </header>

                            <div class="stock-grid">
                                {stocks.slice(0, 24).map(stock => {
                                    const isPos = stock.changePercent >= 0;
                                    return (
                                        <a
                                            href={`/stocks/${stock.symbol}`}
                                            class="stock-card glass-card glow-wrapper"
                                        >
                                            <div
                                                class={`glow-bg ${isPos ? 'pos-glow' : 'neg-glow'}`}
                                            />
                                            <div class="sc-header">
                                                <span class="mono symbol">{stock.symbol}</span>
                                                <span
                                                    class={`mono pct ${isPos ? 'text-pos' : 'text-neg'}`}
                                                >
                                                    {isPos ? '+' : ''}
                                                    {stock.changePercent.toFixed(2)}%
                                                </span>
                                            </div>
                                            <div class="sc-name text-muted">{stock.name}</div>
                                            <div class="sc-price mono">
                                                {stock.price.toFixed(2)}
                                            </div>
                                        </a>
                                    );
                                })}
                            </div>
                        </section>
                    );
                })
            }
        </div>
    </div>
</Layout>

<style>
    .industries-container {
        display: flex;
        flex-direction: column;
        gap: 24px;
        max-width: 1600px;
        margin: 0 auto;
        padding-bottom: 40px;
    }

    /* Glass Base & Glows */
    .glass-card {
        background: var(--c-bg-glass);
        backdrop-filter: var(--glass-blur);
        -webkit-backdrop-filter: var(--glass-blur);
        border: 1px solid var(--c-border-glass, rgba(60, 80, 120, 0.2));
        border-radius: 16px;
        position: relative;
        overflow: hidden;
    }

    .glow-wrapper {
        position: relative;
    }
    .glow-bg {
        position: absolute;
        inset: 0;
        opacity: 0;
        pointer-events: none;
        z-index: 0;
        transition: opacity 0.3s ease;
        background: radial-gradient(
            400px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
            var(--glow-color, rgba(255, 255, 255, 0.05)),
            transparent 40%
        );
    }
    .glow-wrapper:hover .glow-bg {
        opacity: 1;
    }
    .neutral-glow {
        --glow-color: rgba(200, 200, 210, 0.05);
    }
    .accent-glow {
        --glow-color: rgba(59, 130, 246, 0.1);
    }
    .pos-glow {
        --glow-color: rgba(16, 185, 129, 0.1);
    }
    .neg-glow {
        --glow-color: rgba(244, 63, 94, 0.1);
    }

    /* Hero */
    .page-hero {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 32px;
        z-index: 10;
    }
    .hero-left {
        display: flex;
        align-items: center;
        gap: 20px;
        z-index: 1;
    }
    .icon-box {
        width: 64px;
        height: 64px;
        background: rgba(var(--c-accent-rgb), 0.1);
        border: 1px solid rgba(var(--c-accent-rgb), 0.3);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
    }
    .hero-left h1 {
        font-size: 20px;
        margin: 0;
        letter-spacing: 2px;
    }
    .hero-left p {
        font-size: 11px;
        margin: 4px 0 0;
    }

    .sys-status {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 11px;
        z-index: 1;
    }
    .pulse-dot {
        width: 6px;
        height: 6px;
        background: var(--c-success);
        border-radius: 50%;
        box-shadow: 0 0 8px var(--c-success);
        animation: pulse 2s infinite;
    }
    @keyframes pulse {
        0%,
        100% {
            opacity: 0.4;
        }
        50% {
            opacity: 1;
        }
    }

    /* Macro Category Grid */
    .industry-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        z-index: 5;
    }
    .industry-card {
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s;
    }
    .industry-card:hover {
        transform: translateY(-4px);
        border-color: rgba(var(--c-accent-rgb), 0.4);
    }
    .card-content {
        padding: 24px;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 16px;
        align-items: center;
        position: relative;
        z-index: 1;
    }
    .ind-icon {
        font-size: 32px;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
    }
    .ind-info h3 {
        margin: 0 0 4px 0;
        font-size: 13px;
        letter-spacing: 1px;
        color: #fff;
    }
    .ind-info p {
        margin: 0;
        font-size: 11px;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .ind-count {
        grid-column: 1 / -1;
        font-size: 11px;
        text-align: right;
        padding-top: 12px;
        border-top: 1px dashed rgba(255, 255, 255, 0.05);
        margin-top: 8px;
        font-weight: 800;
    }

    /* Sector Specific Stock Grids */
    .sector-section {
        margin-top: 60px;
        padding-top: 40px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }
    .sector-header {
        margin-bottom: 24px;
        display: flex;
        align-items: baseline;
        gap: 16px;
    }
    .sector-header h2 {
        font-size: 18px;
        margin: 0;
        letter-spacing: 2px;
    }
    .sector-header span.text-muted {
        font-size: 12px;
    }

    .stock-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 16px;
    }
    .stock-card {
        text-decoration: none;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 8px;
        transition: border-color 0.2s;
    }
    .stock-card:hover {
        border-color: rgba(255, 255, 255, 0.2);
    }
    .stock-card > div {
        position: relative;
        z-index: 1;
    }

    .sc-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .symbol {
        font-weight: 800;
        font-size: 14px;
        color: #fff;
    }
    .pct {
        font-size: 12px;
        font-weight: 600;
        background: rgba(0, 0, 0, 0.3);
        padding: 2px 6px;
        border-radius: 4px;
    }
    .sc-name {
        font-size: 11px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .sc-price {
        font-size: 20px;
        font-weight: 800;
        color: #fff;
        margin-top: 8px;
    }

    @media (max-width: 768px) {
        .page-hero {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }
        .sector-header {
            flex-direction: column;
            gap: 4px;
        }
    }
</style>

<script>
    // Glow Tracker
    document.addEventListener('mousemove', e => {
        const wrappers = document.querySelectorAll('.glow-wrapper');
        wrappers.forEach(wrapper => {
            const rect = wrapper.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            (wrapper as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
            (wrapper as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
        });
    });
</script>
