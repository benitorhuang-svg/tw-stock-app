    const chartBackdrop = document.getElementById('trend-modal-backdrop');
    let breadthChart: any = null;

    const resetZoomBtn = document.getElementById('reset-trend-zoom');

    async function initTrendChart() {
        const canvas = document.getElementById('breadth-ratio-chart') as HTMLCanvasElement;
        if (!canvas) return;

        try {
            const res = await fetch(`/api/market/breadth-timeseries?t=${Date.now()}`);
            const data = await res.json();
            
            const labels = data.map((d: any) => d.date);
            const ratios = data.map((d: any) => d.down > 0 ? (d.up / d.down) : 2);

            if (breadthChart) breadthChart.destroy();

            // @ts-ignore
            breadthChart = new Chart(canvas, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Ratio',
                            data: ratios,
                            borderColor: '#3b82f6',
                            borderWidth: 2,
                            pointRadius: 0,
                            pointHoverRadius: 6,
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderWidth: 3,
                            yAxisID: 'yRatio',
                            tension: 0.4,
                            fill: {
                                target: { value: 1 },
                                above: 'transparent',
                                below: 'rgba(34, 197, 94, 0.15)'
                            }
                        },
                        {
                            label: 'Baseline',
                            data: labels.map(() => 1),
                            borderColor: 'rgba(255,255,255,0.2)',
                            borderWidth: 1,
                            borderDash: [5, 5],
                            pointRadius: 0,
                            fill: false,
                            yAxisID: 'yRatio',
                            order: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#0a0c10',
                            borderColor: 'rgba(255, 255, 255, 0.1)',
                            borderWidth: 1,
                            titleFont: { size: 10, weight: 'bold' },
                            bodyFont: { size: 12, family: 'monospace' },
                            padding: 12,
                            displayColors: true,
                            callbacks: {
                                label: (context: any) => {
                                    if (context.dataset.label === 'Baseline') return null;
                                    const d = data[context.dataIndex];
                                    const ratio = context.parsed.y.toFixed(2);
                                    return [
                                        ` RATIO : ${ratio}`,
                                        ` â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€`,
                                        ` ä¸Šæ¼²  : ${d.up}`,
                                        ` æŒå¹³  : ${d.flat}`,
                                        ` ä¸‹è·Œ  : ${d.down}`
                                    ];
                                }
                            }
                        },
                        // @ts-ignore
                        zoom: {
                            pan: { enabled: true, mode: 'x' },
                            zoom: {
                                wheel: { enabled: true },
                                pinch: { enabled: true },
                                mode: 'x',
                            },
                            limits: { x: {min: 'original', max: 'original'} }
                        }
                    },
                    onClick: (e: any, elements: any) => {
                        if (elements.length > 0) {
                            const index = elements[0].index;
                            const clickedDate = labels[index];
                            const datePicker = document.getElementById('market-date-picker') as HTMLInputElement;
                            if (datePicker) {
                                datePicker.value = clickedDate;
                                datePicker.dispatchEvent(new Event('change', { bubbles: true }));
                                // Optional: Close modal after selection
                                closeModal();
                            }
                        }
                    },
                    onHover: (e: any, elements: any) => {
                        e.native.target.style.cursor = elements.length > 0 ? 'pointer' : 'default';
                    },
                    scales: {
                        x: {
                            min: labels.length > 60 ? labels[labels.length - 60] : undefined,
                            max: labels.length > 0 ? labels[labels.length - 1] : undefined,
                            grid: { display: false },
                            ticks: { 
                                maxRotation: 0,
                                autoSkip: true,
                                maxTicksLimit: 8,
                                color: 'rgba(255,255,255,0.2)', 
                                font: { family: 'monospace', size: 8 } 
                            }
                        },
                        yRatio: {
                            position: 'left',
                            grid: { color: 'rgba(255,255,255,0.03)' },
                            ticks: { color: 'rgba(255,255,255,0.5)', font: { size: 10, weight: 'bold' } }
                        }
                    }
                }
            });
        } catch (err) {
            console.error('[Chart] Initialization failed:', err);
        }
    }

    openChartBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        const isHidden = trendModal?.classList.contains('hidden');
        if (isHidden) {
            trendModal?.classList.remove('hidden');
            trendModal?.classList.add('block');
            openChartBtn.classList.add('bg-accent/20', 'border-accent/60');
            openChartBtn.querySelector('svg')?.classList.add('text-accent');
            openChartBtn.querySelector('svg')?.classList.remove('text-accent/40');
            initTrendChart();
        } else {
            closeModal();
        }
    });

    resetZoomBtn?.addEventListener('click', () => {
        if (breadthChart) {
            breadthChart.resetZoom();
        }
    });

    const closeModal = () => {
        trendModal?.classList.add('hidden');
        trendModal?.classList.remove('block');
        openChartBtn?.classList.remove('bg-accent/20', 'border-accent/60');
        openChartBtn?.querySelector('svg')?.classList.remove('text-accent');
        openChartBtn?.querySelector('svg')?.classList.add('text-accent/40');
    };

    closeChartBtn?.addEventListener('click', (e) => { e.stopPropagation(); closeModal(); });
    chartBackdrop?.addEventListener('click', (e) => { e.stopPropagation(); closeModal(); });
    document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal(); });
</script>

