---
import Layout from '../layouts/Layout.astro';
import StockCard from '../components/StockCard.astro';
import StrategyCard from '../components/StrategyCard.astro';
import Heatmap from '../components/Heatmap.astro';
import { getTopGainers, getTopLosers, getStocksWithPrices } from '../utils/stockDataService';
import { strategies } from '../data/strategies';

// Load real data from CSV files
const allStocks = await getStocksWithPrices();
const topGainers = await getTopGainers(8);
const topLosers = await getTopLosers(8);

// Convert to format expected by StockCard
const formatStock = (s: any) => ({
    symbol: s.symbol,
    name: s.name,
    price: s.price,
    change: s.change,
    changePercent: s.changePercent,
    volume: s.volume,
    pe: s.pe || 0,
    pb: s.pb || 0,
    yield: s.yield || 0,
    roe: s.roe || 0,
    eps: s.eps || 0,
});

const gainersFormatted = topGainers.map(formatStock);
const losersFormatted = topLosers.map(formatStock);

const marketIndices = [
    {
        name: 'ç¸½è‚¡æ•¸',
        value: allStocks.length.toLocaleString(),
        change: 'æ”¯è‚¡ç¥¨è³‡æ–™',
        isPositive: true,
    },
    {
        name: 'ä¸Šæ¼²',
        value: allStocks.filter(s => s.change > 0).length.toString(),
        change: 'æ”¯',
        isPositive: true,
    },
    {
        name: 'ä¸‹è·Œ',
        value: allStocks.filter(s => s.change < 0).length.toString(),
        change: 'æ”¯',
        isPositive: false,
    },
    {
        name: 'å¹³ç›¤',
        value: allStocks.filter(s => s.change === 0).length.toString(),
        change: 'æ”¯',
        isPositive: null,
    },
];
---

<Layout title="Dashboard">
    <div class="dashboard-container">
        <!-- Top Stats Row -->
        <div class="stats-row">
            {
                marketIndices.map(index => (
                    <div class="stat-card">
                        <div class="stat-label">{index.name}</div>
                        <div class="stat-value mono">{index.value}</div>
                        <div
                            class={`stat-change mono ${index.isPositive ? 'text-pos' : 'text-neg'}`}
                        >
                            {index.change}
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Heatmap -->
        <Heatmap />

        <!-- Main Content Grid -->
        <div class="main-grid">
            <!-- Column 1: Top Gainers -->
            <div class="panel col-1 reveal-grid delay-1">
                <div class="panel-header">
                    <h2 class="section-title">ðŸ”¥ å¸‚å ´é ˜æ¼² (Gainers)</h2>
                </div>
                <div class="list-container">
                    {gainersFormatted.map(stock => <StockCard stock={stock} />)}
                </div>
            </div>

            <!-- Column 2: Strategies -->
            <div class="panel col-2 reveal-grid delay-2">
                <div class="panel-header">
                    <h2 class="section-title">ðŸŽ¯ ç­–ç•¥ä¿¡è™Ÿ (Signals)</h2>
                </div>
                <div class="list-container">
                    {strategies.slice(0, 6).map(strategy => <StrategyCard strategy={strategy} />)}
                </div>
            </div>

            <!-- Column 3: Top Losers -->
            <div class="panel col-3 reveal-grid delay-3">
                <div class="panel-header">
                    <h2 class="section-title">ï¿½ å¸‚å ´é ˜è·Œ (Losers)</h2>
                </div>
                <div class="list-container">
                    {losersFormatted.map(stock => <StockCard stock={stock} variant="detailed" />)}
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .dashboard-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        max-width: 1600px;
        margin: 0 auto;
        width: 100%;
        animation: fadeIn 0.6s var(--ease-out);
    }

    /* Stats Row */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
    }

    .stat-card {
        background: var(--c-bg-glass);
        border: 1px solid var(--c-border);
        padding: 20px;
        border-radius: var(--radius);
        backdrop-filter: var(--glass-blur);
        transition: var(--transition-premium);
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 100px;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        border-color: var(--c-border-active);
        box-shadow: var(--shadow-panel);
    }

    .stat-label {
        font-family: 'Outfit', sans-serif;
        font-size: 11px;
        font-weight: 800;
        color: var(--c-text-muted);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 4px;
    }

    .stat-value {
        font-family: 'Outfit', sans-serif;
        font-size: 28px;
        font-weight: 800;
        color: var(--c-text-primary);
        line-height: 1.2;
    }

    .stat-change {
        font-family: 'JetBrains Mono', monospace;
        font-size: 11px;
        font-weight: 700;
        margin-top: 4px;
    }

    /* Main Grid Layout */
    .main-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 10px;
    }

    .panel {
        background: var(--c-bg-glass);
        border: 1px solid var(--c-border);
        border-radius: var(--radius);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        backdrop-filter: var(--glass-blur);
        box-shadow: var(--panel-shadow);
        transition: var(--transition-premium);
    }

    .panel-header {
        padding: 12px 16px;
        border-bottom: 1px solid var(--c-border);
        background: rgba(255, 255, 255, 0.02);
    }

    .list-container {
        padding: 12px;
        max-height: 500px;
        overflow-y: auto;
    }

    /* Responsive */
    @media (max-width: 1280px) {
        .stats-row {
            grid-template-columns: repeat(2, 1fr);
        }
        .main-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .stats-row,
        .main-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
