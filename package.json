{
    "name": "tw-stock-app",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "fetch": "node scripts/fetch-yahoo.mjs",
        "fetch:list": "node scripts/fetch-stock-list.mjs",
        "fetch:revenue": "node scripts/fetch-revenue.mjs",
        "fetch:stats": "node scripts/fetch-monthly-stats.mjs",
        "fetch:financials": "node scripts/fetch-financials.mjs",
        "fetch:chips": "node scripts/fetch-chips.mjs",
        "fetch:all": "npm run fetch:list && npm run fetch:revenue && npm run fetch:stats && npm run fetch:financials && npm run fetch:chips",
        "build-db": "node scripts/build-sqlite-db.js && node scripts/import-forensic.mjs && node scripts/etl/generate-all-features.mjs && node scripts/etl/migrate-to-analysis-tables.mjs",
        "refresh-db": "npm run fetch:all && npm run build-db",
        "ml:train": "npx tsx scripts/ml/train.ts",
        "ml:predict": "npx tsx scripts/ml/predict.ts",
        "ml:reflect": "npx tsx scripts/ml/reflect.ts",
        "format": "prettier --write .",
        "prettify": "npm run format"
    },
    "dependencies": {
        "@astrojs/check": "^0.9.6",
        "@astrojs/node": "^9.5.2",
        "@astrojs/svelte": "^7.2.5",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.2.0",
        "@tensorflow/tfjs-node": "^4.22.0",
        "astro": "^5.16.15",
        "better-sqlite3": "^12.6.2",
        "chartgpu": "^0.1.6",
        "sql.js": "^1.13.0",
        "svelte": "^5.53.3",
        "tailwindcss": "^4.2.0",
        "technicalindicators": "^3.1.0",
        "typescript": "^5.9.3"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@types/better-sqlite3": "^7.6.13",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "@vite-pwa/astro": "^1.2.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-astro": "^1.5.0",
        "happy-dom": "^20.3.7",
        "prettier": "^3.8.1",
        "prettier-plugin-astro": "^0.14.1",
        "tsx": "^4.21.0",
        "vite-plugin-pwa": "^1.2.0",
        "vitest": "^4.0.18"
    }
}
